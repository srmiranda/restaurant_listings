<div class="row">
  <div class="large-6">
    <h1 class="title">Add a Restaurant</h1>
    <%= form_for @restaurant do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      </br>
      <%= f.label :address %>
      <%= f.text_field :address %>
      </br>
      <%= f.label :city %>
      <%= f.text_field :city %>
      </br>
      <%= f.label :state %>
      <%= f.text_field :state %>
      </br>
      <%= f.label :zip %>
      <%= f.text_field :zip %>
      </br>
      <%= f.label :description %>
      <%= f.text_field :description %>
      </br>
      <%= f.label :category %>
      <%= f.text_field :category %>
      </br>
      <%= f.submit "Add Restaurant", class: "button tiny" %>
    <% end %>

    <%= link_to "All Listings", root_path, class: "button tiny" %>

  </div>
</div>
